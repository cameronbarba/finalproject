<form method="get">
		<label>New Entry</label>
		<fieldset>
			<span id="exercise">
			<label>Exercise Name:</label>
			<input type="text" name="name">
			</span>

			<span id="weight">
			<label>Reps:</label>
			<input type="number" name="reps" step="1">
			</span>

			<span id="weight">
			<label>Weight:</label>
			<input type="number" name="weight" step="0.5">
			</span>

			<span id="date">
			<label>Date:</label>
			<input type="date" name="date">
			</span>

			<span id="unit">
			<label>Unit:</label>
			<label>kg.</label>
			<input type="radio" name="lbs" value="0">
			<label>lb.</label>
			<input type="radio" name="lbs" value="1">
			</span>

			<button type="submit" name="Add" value="Add">Add</button>
		</fieldset>
<br>
   


   </form>
   
   <h2>Your tracked exercises (refresh this page after returning to this page from the edit page):</h2>
   <table style="border-style: solid">
      <thead>
         <tr>
            <th>Exercise Name</th>
            <th>Reps</th>
            <th>Weight</th>
            <th>Date</th>
            <th>Units</th>
         </tr>
      </thead>
   {{#if results}}
      {{#each results}}
         <tr>
            <td>{{this.name}}</td>
            <td>{{this.reps}}</td>
            <td>{{this.weight}}</td> 
            <td>{{this.date}}</td> 
            <td>
               <!-- default is kgs -->
               {{#if this.lbs}}
               lbs
               {{else}}
               kgs
               {{/if}}
            </td>
            <td>
               <form method="get">
                  <input type="hidden" name="id" value="{{this.id}}">
                  <input type="submit" name="Delete" value="Delete">
               </form>

               <form action="/edit" method="get">
                  <input type="hidden" name="id" value="{{this.id}}">
                  <input type="submit" name="Edit" value="Edit">
               </form>

            </td>
         </tr>
      {{/each}}
   {{/if}}
   </table>
