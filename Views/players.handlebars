<html>
<h3>Add new players:</h3>
<form id="addplayer" action="/players" method="post">
    First name: <input type="text" name="firstName" required><br>
    Last name: <input type="text" name="lastName" required><br>
    Team: <select name="team">
       {{#each teams}}
       <option value="{{teamID}}">{{name}}</option>
       {{/each}}
    <select><br>
    Height: <input type="number" name="height" min="0" required><br>
    Weight: <input type="number" name="weight" min="0" required><br>
    Position: <select name="position">
       <option value="PG">PG</option>
       <option value="SG">SG</option>
       <option value="SF">SF</option>
       <option value="PF">PF</option>
       <option value="C">C</option>
    </select><br>
    <input type="submit" value="Add">
 </form>
<br/>

<form id='filter_players' action='/players' method='get'>
    <label> Filter by team </label>
    <select id='team_filter' name="team"> 
        {{#each teams}}
        <option value="{{teamID}}">{{name}}</option>
        {{/each}}
    </select><br>
    <input type="button" value="Filter" onclick="filterplayersbyteam()">
</form>

<form id='search_players' action='' method=''>
    <label> Search players for first name starting with:</label>
    <input id='first_name_search_string' type='text' name='first_name_search_string' value=''>
    <input type="button" value="Search" onclick="searchplayer()">
</form>
<br>
<br>

<h3>Current players:</h3>
<table>
    <thead> 
        <th>First Name</th> 
        <th>Last Name</th> 
        <th>Height</th>
        <th>Weight</th>
        <th>Position</th>  
        <th>Team</th>
    </thead> 
    <tbody>
        {{#each players}}
        <tr> 
            <td>{{firstName}}</td> 
            <td>{{lastName}}</td> 
            <td>{{height}}</td> 
            <td>{{weight}}</td>
            <td>{{position}}</td>
            <td>{{name}}</td>
            <td><button onclick="deletePlayer({{playerID}})">Delete</button></td>
            <td><a href="/players/{{playerID}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</html>
