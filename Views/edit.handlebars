<form action="/" method="get">
		<label>Edit Entry</label>
		<fieldset>
			<span id="exercise">
			<label>Exercise Name:</label>
			<input type="text" name="name">
			</span>

			<span id="weight">
			<label>Reps:</label>
			<input type="number" name="reps" step="1">
			</span>

			<span id="weight">
			<label>Weight:</label>
			<input type="number" name="weight" step="0.5">
			</span>

			<span id="date">
			<label>Date:</label>
			<input type="date" name="date">
			</span>

			<span id="unit">
			<label>Unit:</label>
			<label>kg.</label>
			<input type="radio" name="lbs" value="0">
			<label>lb.</label>
			<input type="radio" name="lbs" value="1">
			</span>

                        <input type="hidden" name="id" value="{{results}}">
			<button type="submit" name="Edit" value="Edit">Done Editing</button>
		</fieldset>

</form>



